journal = {Social Psychology Quarterly},
keywords = {altrusm,evolution,experiments,heterogeneity,philanthropy,psychology,reciprocity,ritual,social giving},
number = {1},
pages = {37--52},
publisher = {American Sociological Association},
title = {{Altruism and Indirect Reciprocity: The Interaction of Person and Situation in Prosocial Behavior}},
volume = {71},
year = {2008}
}
