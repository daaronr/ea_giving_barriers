isbn = {1089-2680},
issn = {10892680},
journal = {Review of General Psychology},
keywords = {Dependability,False negative,False positive,Replication,Research},
number = {1},
pages = {52--68},
title = {{A concise set of core recommendations to improve the dependability of psychological research}},
volume = {19},
year = {2015}
}
@article{Potters2005,
